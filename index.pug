doctype html
html
    head
        meta(name="viewport" content="width=device-width, initial-scale=1")
    body
        #app
            #game-board
                #top-bar
                    .back-btn &lt;
                    .time-display 2:00
                - for (var i = 0; i < 6; i++)
                    .row
                        - for (var j = 0; j < 2; j++)
                            .cell
                                .inner-cell
                                    .front 
                                    .back
            #starting-page
                #easy-opt-btn.difficulty-btn Easy
                    .start-option-container
                        #easy-btn.start-game-btn Start
                        .keep-choosing-btn x
                #medium-opt-btn.difficulty-btn Medium
                    .start-option-container
                        #medium-btn.start-game-btn Start
                        .keep-choosing-btn x
                #hard-opt-btn.difficulty-btn Hard
                    .start-option-container
                        #hard-btn.start-game-btn Start
                        .keep-choosing-btn x
